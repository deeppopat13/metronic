@{
    ViewData["Title"] = "Country Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model metronic.Areas.LOC_Country.Models.LOC_CountryModel
<div class="row">
    <div class="col-md-12">
        <h3>@TempData["CountryInsertMsg"]</h3>
        <form method="post" asp-controller="LOC_Country" asp-action="Save" asp-area="LOC_Country">
            @Html.HiddenFor(x => x.CountryID);
            <div class="form-group">
                <label>Country Name</label>
                <input type="text" class="form-control" asp-for="CountryName" placeholder="Enter Country Name" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Country Code</label>
                <input type="number" class="form-control" asp-for="CountryCode" placeholder="Enter Country Code" />
            </div>
            <div class="form-group">
                <label>Creation Date</label>
                <input type="date" class="form-control" asp-for="CreationDate" />
            </div>
            <div class="form-group">
                <label>Modification Date</label>
                <input type="date" class="form-control" asp-for="ModificationDate" />
            </div>
            <hr />
            <input type="submit" class="btn btn-success" />
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}